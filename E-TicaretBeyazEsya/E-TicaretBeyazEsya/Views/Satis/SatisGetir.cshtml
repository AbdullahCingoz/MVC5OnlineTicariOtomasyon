@model E_TicaretBeyazEsya.Models.Tablolar.SatisHareket
@{
    ViewBag.Title = "SatisGetir";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<br />
<h2>Ürün Satış Güncelle</h2>
<br />
@using (Html.BeginForm("SatisGuncelle", "Satis", FormMethod.Post))
{
    @Html.HiddenFor(x => x.SatisHareket_ID)
    <br />
    @Html.LabelFor(x => x.Urun)
    @Html.DropDownListFor(x => x.Urun_ID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Cari)
    @Html.DropDownListFor(x => x.Cari_ID, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Personel)
    @Html.DropDownListFor(x => x.Personel_ID, (List<SelectListItem>)ViewBag.dgr3, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.SatisHareket_Adet)
    @Html.TextBoxFor(x => x.SatisHareket_Adet, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.SatisHareket_Fiyat)
    @Html.TextBoxFor(x => x.SatisHareket_Fiyat, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.SatisHareket_ToplamTutar)
    @Html.TextBoxFor(x => x.SatisHareket_ToplamTutar, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.SatisHareket_Tarih)
    @Html.TextBoxFor(x => x.SatisHareket_Tarih, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Güncele</button>
}
