@model E_TicaretBeyazEsya.Models.Tablolar.SatisHareket
@{
    ViewBag.Title = "SatisYap";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
<br />
<h2>SatisYap</h2>
<br />

<form class="form-group" method="post">
    @Html.LabelFor(x => x.Urun_ID)
    <input type="text" name="Urun_ID" value="@ViewBag.dgr1" class="form-control" readonly />
    <br />
    @Html.LabelFor(x => x.Personel_ID)
    @Html.DropDownListFor(x => x.Personel_ID, (List<SelectListItem>)ViewBag.dgr3, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Cari_ID)
    @Html.TextBoxFor(x => x.Cari_ID, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.SatisHareket_Adet)
    <input type="number" name="SatisHareket_Adet" class="form-control" max="10" min="0" placeholder="Adet Girin" id="txt1" onchange="sum();" />
    <br />
    @Html.LabelFor(x => x.SatisHareket_Fiyat)
    <input type="text" name="SatisHareket_Fiyat" value="@ViewBag.dgr2" class="form-control" id="txt2" onkeyup="sum();" />

    <br />
    @Html.LabelFor(x => x.SatisHareket_ToplamTutar)
    <input type="text" name="SatisHareket_ToplamTutar" value="0" class="form-control" id="txt3" readonly />
    @*@Html.TextBoxFor(x => x.Kategori_ID, new { @class = "form-control" })*@
    <br />
    <button class="btn btn-primary">Satış Yap</button>
</form>
<br />

<script>
    function sum() {
        sayi1 = document.getElementById('txt1').value;
        sayi2 = document.getElementById('txt2').value;
        var sonuc = parseInt(sayi1) * parseInt(sayi2)
        if (!isNaN(sonuc)) {
            document.getElementById('txt3').value = sonuc;
        }

    }
</script>

