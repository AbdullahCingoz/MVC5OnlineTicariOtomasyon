@using E_TicaretBeyazEsya.Models.Tablolar
@model List<KargoTakip>

@{
    ViewBag.Title = "CariKargoTakip";
    Layout = "~/Views/Shared/Cari_Layout.cshtml";
}


<h2>Kargo Takip</h2>
<br />
<table class="table table-hover">
    <tr>
        <th>SIRA NO</th>
        <th>AÇIKLAMA</th>
        <th>TARİH</th>
    </tr>

    @for (int i = 0; i < Model.Count; i++)
    {
        foreach (var x in Model)
        {
            <tr>
                <td>@{i++;}  @i</td>
                <td>@x.Aciklama</td>
                <td>@x.TarihZaman.ToString("dd-MM-yyyy")</td>
            </tr>
        }
    }
</table>
